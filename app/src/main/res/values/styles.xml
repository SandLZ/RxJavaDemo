<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2fa881</item>
        <item name="colorPrimaryDark">#2aa000</item>
        <item name="colorAccent">#2fa881</item>

    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#2aa000</item>
        <item name="android:tint">#FFF</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="Translucent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Translucent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimaryDark">#2aa000</item>
        <item name="android:tint">#FFF</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>
